<%- include('_head') %>
    <title><%= article.title %></title>
</head>
<body>
    <%- include('_nav') %>
    <div class="container py-5">
      <div class="row d-flex justify-content-center">
        <a href="/list">Back</a>
        <div class="col-8">
          <div class="card shadow">
            <img src="/uploads/images/<%= article.img %>" class="card-img-top" alt="postImage" />
            <div class="card-body">
              <h5 class="card-title">
                <%= article.title %>
              </h5>
              <!-- <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> -->
              <p class="card-text text-secondary">
                <%= article.description %>
              </p>
              <p>
                <%- article.sanitizedHtml %>
              </p>
              <small class="text-secondary d-flex justify-content-end">
                Publish: <%= article.createdAt.toLocaleDateString() %>
              </small>
              <% if(user) { %>
                <% if(article.userPerson == user.email) { %>
                  <form action="/articles/<%= article.id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger mt-2">Delete</button>
                  </form>
                <% } %>
              <% } %>
              <hr />
              <div class="d-flex justify-content-center justify-content-md-end  align-items-center align-items-md-end flex-column flex-md-row">
                <small class="mx-3">
                  <img class="rounded-circle" width="50" height="50" src="<%= article.userPic %>" alt="userPicture" />
                </small>
                <small class="text-muted">
                  <%= article.userPerson %>
                </small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>

</body>
</html>